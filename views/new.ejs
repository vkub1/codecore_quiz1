<%- include('./partials/header.ejs')%>
<form action="/clucks" method="POST">
    <div class="container col-md-12 border border-secondary rounded" id="sign-in-box">
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" name="content" placeholder="Whatchoo cluckin 'bout?"></textarea>
        </div>
        <div class="form-group">
            <label for="image_url">Image Url</label>
            <input type="text" class="form-control" name="image_url" id="image_url" placeholder="https://i.imgur.com/qM6KaEy.gifv" required>
        </div>
        <div class="form-group" id="sign-in-button">
            <button type="submit" class="btn btn-outline-secondary"><div id="sign-in-text">Cluck!</div></button>
        </div>
    </div>
</form>
